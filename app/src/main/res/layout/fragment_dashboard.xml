                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="400px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="퇴행성 관절염 오추전만"
                            android:background="@drawable/border"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
